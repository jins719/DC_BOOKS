<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#f0f0f0"
    android:theme="@style/ThemeOverlay.AppCompat.Dark"
    android:gravity="center_vertical"
    >

    <RelativeLayout
        android:id="@+id/relativelayout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">


        <RelativeLayout
            android:id="@+id/relativeLayout11"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:visibility="invisible"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:background="@drawable/round_layout"
            android:gravity="center_horizontal|center_vertical">

            <TextView
                android:id="@+id/textView34"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="S"
                android:textColor="#fff"
                android:textSize="17dp"
                android:textStyle="bold"/>


        </RelativeLayout>

        <ImageView
            android:id="@+id/imageView12"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignBottom="@+id/relativeLayout11"
            android:layout_alignLeft="@+id/relativeLayout11"
            android:layout_alignStart="@+id/relativeLayout11"
            android:src="@mipmap/avtar"/>

        <TextView
            android:id="@+id/textView35"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:textColor="#505050"
            android:textSize="14dp"
            android:layout_alignTop="@+id/relativeLayout11"
            android:layout_toEndOf="@+id/relativeLayout11"
            android:layout_toRightOf="@+id/relativeLayout11"
            android:text="Hi guest"/>

        <TextView
            android:id="@+id/textView36"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView35"
            android:layout_alignStart="@+id/textView35"
            android:layout_below="@+id/textView35"
            android:text="Log in"
            android:layout_marginTop="2dp"
            android:textColor="#1a80c0"/>
    </RelativeLayout>



</RelativeLayout>